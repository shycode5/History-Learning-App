<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity2">


    <ImageButton
        android:id="@+id/ImageButton"
        android:layout_width="342dp"
        android:layout_height="166dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="multiply"
        android:scaleType="fitXY"
        android:text="ancient"
        app:srcCompat="@drawable/ancient1" />

    <ImageButton
        android:id="@+id/ImageButton2"
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="295dp"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="multiply"
        android:scaleType="fitXY"
        android:text="medievel"
        app:srcCompat="@drawable/medievel" />


    <ImageButton
        android:id="@+id/ImageButton3"
        android:layout_width="341dp"
        android:layout_height="161dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="multiply"
        android:scaleType="fitXY"
        android:text="modern"
        app:srcCompat="@drawable/modern" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="176dp"
        android:text="Ancient History"
        android:textColor="@color/white"
        android:textSize="34dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="356dp"
        android:text="Medieval History"
        android:textColor="@color/white"
        android:textSize="34dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="146dp"
        android:text="Modern History"
        android:textColor="@color/white"
        android:textSize="34dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="11dp"
        android:text="GAME" />

    <Button
        android:id="@+id/button5"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="11dp"
        android:text="BUDDY" />

    <Button
        android:id="@+id/button6"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="11dp"
        android:text="NOTE" />


</RelativeLayout>